<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Personal Web</title>
    <!-- ICON -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />

    <!-- BOOTSTRAP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <style>
      body { background-color: whitesmoke; } .navbar { background-color: white
      !important; } .nav-link { color: black !important; } .nav-link:hover {
      color: darkcyan !important; } .active { color: darkcyan !important; }
      .btn-outline-success { background-color: darkcyan !important; color: white
      !important; } .btn-outline-success:hover { background-color: rgba(0, 139,
      139, 0.8) !important; } .icon { color: white; font-size: 20px; background:
      darkcyan; width: 28px; height: 28px; text-align: center; border-radius:
      50%; line-height: 29px; } label{ margin-top: 5px; } textarea { resize:
      none; } .form-check{display: flex !important; align-items: center
      !important; gap: 10px;} #myProject {background-color: white !important;}
    </style>
  </head>
  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid mx-5">
        <a class="navbar-brand font-size-base fw-bold" href="/"><h2
          >LOGO.</h2></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="project">Add My Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a class="nav-link" href="testimonials">Testimonials</a>
            </li>
          </ul>

          <ul class="navbar-nav mb-2 mb-lg-0">
            {{#unless isLogin}}
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/register"
              >Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            {{/unless}}
            {{#if isLogin}}
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Hello,
                  {{dataUser.name}}
                </a>
                <ul class="dropdown-menu">
                  <form action="/logout" method="post">
                    <button
                      class="dropdown-item text-center align-item-center btn btn-light"
                    >Logout</button>
                  </form>
                </ul>
              </li>
            {{/if}}
            <li class="nav-item ms-4">
              <a href="contactForm" class="btn btn-outline-success">
                Contact Me
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- CONTENT -->
    <form
      class="row w-50 d-flex my-5 mx-auto"
      method="post"
      action="/submitproject"
      enctype="multipart/form-data"
    >
      <input name="id" value="{{dataProject.id}}" hidden />
      <input name="duration" hidden />
      <h1 class="text-center mb-3">EDIT PROJECT</h1>
      <div class="">
        <label for="projectName" class="form-label fw-medium">Project Name</label>
        <input
          type="text"
          class="form-control"
          id="projectName"
          name="project"
          value="{{dataProject.project}}"
        />
      </div>
      <div class="col-6">
        <label for="start" class="form-label fw-medium">Start Date</label>
        <input
          type="date"
          class="form-control"
          id="start"
          name="start"
          value="{{dataProject.start}}"
        />
      </div>
      <div class="col-6">
        <label for="end" class="form-label fw-medium">End Date</label>
        <input
          type="date"
          class="form-control"
          id="end"
          name="end"
          value="{{dataProject.end}}"
        />
      </div>
      <div class="">
        <label
          for="description"
          class="form-label fw-medium"
        >Description</label>
        <textarea
          class="form-control"
          id="description"
          name="desc"
        >{{dataProject.desc}}</textarea>
      </div>

      <div class="">
        <label class="form-label fw-medium">Technologies</label>
        <div class="d-flex">
          <div class="col-6">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="bx bxl-nodejs fs-3"
                id="nodejs"
                name="tech1"
              />
              <label class="form-check-label" for="nodejs">
                Node JS
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="bx bxl-react fs-3"
                id="reactjs"
                name="tech2"
              />
              <label class="form-check-label" for="reactjs">
                React Js
              </label>
            </div>
          </div>

          <div class="col-6">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="bx bxl-vuejs fs-3"
                id="vuejs"
                name="tech3"
              />
              <label class="form-check-label" for="vuejs">
                Vue JS
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="bx bxl-typescript fs-3"
                id="typescript"
                name="tech4"
              />
              <label class="form-check-label" for="typescript">
                TypeScript
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="">
        <label for="image" class="form-label fw-medium">Upload Image</label>
        <input
          type="file"
          class="form-control"
          id="image"
          aria-describedby="inputGroupFileAddon04"
          aria-label="Upload"
          name="image"
        />
      </div>

      <div class="mt-3">
        <button
          type="submit"
          class="btn btn-outline-success float-end"
          onclick="addProject(event)"
        >Submit</button>
      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    {{! <script src="../assets/js/addProject.js"></script> }}
  </body>
</html>